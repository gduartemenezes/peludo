<%= form_for(pet, url: url) do |form| %>
  <%= render 'shared/error_messages', object: pet %>
  <div class="form-group">
    <%= form.text_field :name,
                        autofocus: true,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.pet.name'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.number_field :age,
                          placeholder: t('activerecord.attributes.pet.age'),
                          class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.collection_select :breed_id,
                               Breed.all,
                               :id,
                               :name,
                               { include_blank: t('activerecord.attributes.pet.breed') },
                               { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= form.select :gender,
                    Pet.genders_for_select,
                    { include_blank: t('activerecord.attributes.pet.gender') },
                    { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= form.text_area :description,
                       rows: 5,
                       placeholder: t('activerecord.attributes.pet.description'),
                       class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_field :city,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.pet.city'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_field :state,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.pet.state'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.text_field :country,
                        autocomplete: 'on',
                        placeholder: t('activerecord.attributes.pet.country'),
                        class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.file_field :pictures, multiple: true, required: true %>
  </div>
  <div class="form-group mt-4">
    <%= form.submit t('.submit'), class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
